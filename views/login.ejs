<%- include("./partials/header") %>

<div class="container">
        <div class="row">
            <div style="width: 30%; margin: 25px auto;">
                <form action="/login" method="POST">
                    <legend>Log In</legend>
                    <div class="form-group">
                        <label for="username"><span>*</span> Username</label>
                        <span><i class="glyphicon glyphicon-user"></i></span>
                        <input class="form-control" type="text" name="username" placeholder="ex: janedoe" required>
                    </div>
                    <div>
                        <label for="password"><span>*</span> Password</label>
                        <span><i class="glyphicon glyphicon-user"></i></span>
                        <input class="form-control" type="password" name="password" placeholder="ex: 123Password" required>
                    </div>
                    <div id="mrgn" class="form-group">
                        <button class="btn btn-lg btn-danger btn-block">Login</button>
                    </div>
                </form>
                <a href="/forgot">Forgot Password ?</a>
            </div>
        </div>
    </div>

<%- include("./partials/footer") %>