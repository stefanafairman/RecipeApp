<!DOCTYPE html>
<html>
    <head>
        <title>Fairman Kitchen</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Rokkitt">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/recipes"><span class="glyphicon glyphicon-home" aria-hidden="true"></span><span class="link"> Home</span></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <% if(!currentUser){ %>
                            <li>
                                <form action="/recipes" method="GET" class="form-inline">
                                    <div id="pd" class="form-group">
                                        <input type="text" name="search" placeholder="Search Recipe..." class="form-control">
                                        <input type="submit" value="Search" class="btn btn-danger">
                                    </div>
                                </form>
                            </li>

                            <li><a href="/login">Login</a></li>
                            <li><a href="/register">Sign Up</a></li>
                        <% } 
                        else { %>
                            <li>
                                <form action="/recipes" method="GET" class="form-inline">
                                    <div id="pd" class="form-group">
                                        <input type="text" name="search" placeholder="Search Recipe..." class="form-control">
                                        <input type="submit" value="search" class="btn btn-danger">   
                                    </div>
                                </form>
                            </li>
                            <li>
                                <a data-target="#" role="button" href="/notifications">
                                    Notifications <span class="badge"><%= notifications.length %></span>
                                </a>
                            </li>
                            <li><a href="/users/<%= currentUser.id %>">Signed in as <%= currentUser.username %></a></li>
                            <li><a href="/logout">Logout</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <% if(error && error.length > 0){ %>
                <div id="danger" class="alert alert-danger" role="alert"><%= error %></div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div id="success" class="alert alert-success" role="alert"><%= success %></div>
            <% } %>
        </div>