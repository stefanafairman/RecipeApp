<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span> Welcome to Fairman Kitchen!</h1>
            <p>View our handpicked recipes from all over the world.</p>
            <p>
                <a class="btn btn-danger btn-lg" href="/recipes/new">Add new recipe</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <div class="col-md-12">
            <% if(noMatch !== undefined) { %>
            <h3><%= noMatch %></h3>  
            <p>
                <form action="/recipes" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Search Recipe..." class="form-control">
                        <input type="submit" value="search" class="btn btn-danger">
                    </div>
                </form>
            </p>
            <% } %>
        </div>
        
        <% recipes.forEach(function(recipe){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail"> 
                    <img src="<%= recipe.image %>"> 
                    <div class="caption">
                        <h4><%= recipe.name %></h4>
                    </div>
                    <p>
                        <a href="/recipes/<%= recipe._id %>" class="btn btn-danger">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<%- include("../partials/footer") %>