<%- include("../partials/header") %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">  
<link rel="stylesheet" href="/stylesheets/profile.css">

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img class="img-responsive" src="<%= user.avatar %>" alt="user profile image">
                <hr>
                <h1><%= user.firstName + " " + user.lastName %></h1>
                <div>
                    <a href="<%= user.pinterestLink %>"><i class="fa fa-pinterest"></i></a>   
                    <a href="<%= user.facebookLink %>"><i class="fa fa-facebook"></i></a> 
                </div>
                <div class="grid-container" style="margin: 24px 0;">
                   <div>Followers: <%= user.followers.length %></div>   
                   <div>Posts: <%= recipes.length %></div> 
                </div>
                <a href="/follow/<%= user.id %>"><button class="btn btn-danger">Follow <%= user.username %></button></a>
            </div>
        </div>
        <div class="col-md-8">
            <h3><%= user.username %>'s recipes: </h3>
            <ul>
                <div class="row">
                    <% recipes.forEach(function(recipe) { %>
                        <div class="col-lg-4">
                            <div class="container">
                                <div class="thumbnail" style="width:15%">
                                    <img src="<%= recipe.image %>" alt="image cap">
                                    <div class="caption">
                                        <h5 class="thumbnail-title"><%= recipe.name %></h5>
                                        <a href="/recipes/<%= recipe.id %>" class="btn btn-danger">Go to Recipe</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- <li><a href="/recipes/<%= recipe.id %>"> <%= recipe.name %></a></li> -->
                    <% }); %>
                </div>
            </ul>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>